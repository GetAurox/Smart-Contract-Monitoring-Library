{
  "compilerOptions": {
    "target": "ES2015",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node",
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}